<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/common_list_divider</item>
        <item name="android:actionBarSize">56dp</item>
    </style>

    <!--加载提示框-->
    <style name="WinDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


    <!--toolbar样式  暗色系-->
    <style name="ToolbarDarkTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:textColor">@android:color/white</item> <!-- 溢出菜单的文字的颜色 -->
    </style>

    <!--toolbar样式 亮色系-->
    <style name="ToolbarLightTheme" parent="@style/Theme.AppCompat.Light">
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>
        <item name="actionOverflowButtonStyle">@style/OverflowButtonStyle</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item> <!-- 溢出菜单的文字的颜色 -->
        <item name="android:actionBarSize">56dp</item>
    </style>

    <!--toolbar menu样式-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--<item name="overlapAnchor">false</item>  &lt;!&ndash;设置不覆盖锚点&ndash;&gt;-->
        <item name="android:dropDownVerticalOffset">2dp</item> <!--向下偏移距离-->
        <item name="android:popupBackground">@color/colorPrimary</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <!--toolbar 按钮样式-->
    <style name="OverflowButtonStyle" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_more_vert</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="style_title_bar_title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="load_more_progress" parent="AppTheme">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

</resources>
