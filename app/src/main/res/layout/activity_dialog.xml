<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="30dp"
    tools:context="com.slimvan.xingyun.activity.DialogActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_ios_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="IOS Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_ios_list_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="IOS List Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_ios_alert_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="IOS Alert Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_alert_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="Alert Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_style_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="Custom Style Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_list_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="List Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_single_choice_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="Single Choice Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_multi_choice_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="Multi Choice Dialog"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_time_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="TimePicker"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_area_picker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="AreaPicker"
                android:textColor="#ffffff" />

            <ImageView
                android:id="@+id/iv_photo_picker"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:gravity="center"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/tv_flex_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="FlexLayout"
                android:textColor="#ffffff" />

            <TextView
                android:id="@+id/tv_md_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/colorAccent"
                android:padding="15dp"
                android:text="MD_Dialog"
                android:textColor="#ffffff" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
